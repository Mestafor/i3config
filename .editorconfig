;.editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false 
max_line_length = 80
trim_trailing_whitespace = false 
space_after_anon_function = false
brace-style = 'expand'
preserve_newlines = false

[**.js]
e4x = true
indent_style = space
indent_size = 2

[**.ts]
e4x = true
indent_style = space
indent_size = 2

[**.json]
e4x = true
indent_style = space
indent_size = 2

[**.tsx]
e4x = true
indent_style = space
indent_size = 2

[**.jsx]
e4x = true
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 2

[**.html]
indent_style = space
indent_size = 2
max_char = 78
brace_style = expand
